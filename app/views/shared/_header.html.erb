<header class="header">
  <nav class="navbar fixed-top">
    <div class="container-fluid">
      <h1 class="mx-3">
        <%= link_to root_path, class: 'navbar-brand title' do %>
          <%= image_tag 'title.png', size: 40 %>
          <span>DeskVista.</span>
        <% end %>
      </h1>
      <%= link_to '投稿診断', new_diagnosis_path %>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end navbar-manu navbar-menu-color" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">メニュー</h5>
          <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body nav-manu">
          <div class="navbar-nav justify-content-end flex-grow-1 pe-3">
            <div class="nav-item">
              <%= link_to root_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-house"></i>　ホームページ
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to posts_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-paste post-btn"></i>　投稿一覧
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to bookmarks_posts_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-bookmark"></i>　ブックマーク
              <% end %>
            </div>
            <div class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user mypage-btn ms-2"></i>　ユーザー情報
              </a>
              <div class="dropdown-menu dropdown-menu-white">
                <% if current_user.post.present? %>
                  <%= link_to '自身の投稿を編集する', edit_post_path(current_user.post), class: 'dropdown-item' %>
                <% else %>
                  <%= link_to '自身の投稿を作成する', new_post_path, class: 'dropdown-item' %>
                <% end %>
                <%= link_to 'ユーザーページ', profile_path, class: 'dropdown-item' %>
                <%= link_to 'メールアドレス・パスワードの変更', edit_user_registration_path, class: 'dropdown-item' %>
                <%= link_to 'アカウントの退会', users_check_path, class: 'dropdown-item text-danger' %>
              </div>
            </div>
            <hr>
            <div class="nav-item">
              <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' }, class: 'nav-link text-danger ms-2' do %>
                <i class="fa-solid fa-right-from-bracket logout-btn"></i>　ログアウト
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>