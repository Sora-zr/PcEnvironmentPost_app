<header class="header">
  <nav class="navbar fixed-top">
    <div class="container-fluid">
      <h1 class="mx-3">
        <%= link_to root_path, class: 'navbar-brand title' do %>
          <%= image_tag 'title.png', size: 40 %>
          <span>DeskVista.</span>
        <% end %>
      </h1>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end navbar-manu navbar-menu-color" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">メニュー</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <div class="navbar-nav justify-content-end flex-grow-1 pe-3">
            <div class="nav-item">
              <%= link_to root_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-house"></i>　ホームページ
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to posts_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-paste post-btn"></i>　投稿一覧
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to user_session_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-right-to-bracket"></i>　ログイン
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link ms-2' do %>
                <i class="fa-solid fa-user-plus"></i>　ユーザー登録
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>