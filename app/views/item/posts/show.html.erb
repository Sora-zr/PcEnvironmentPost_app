<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @post.name %></h5>
          <p class="card-text"><%= simple_format @post.description %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @post.updated_at.strftime("%Y-%m-%d") %></small>
          </p>

          <% if current_user.own?(@post) %>
            <%= link_to '編集', edit_item_post_path(@post), class: 'btn btn-success' %>
            <%= link_to '削除', item_post_path(@post), class: 'btn btn-danger', data: { turbo_method: :delete } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>