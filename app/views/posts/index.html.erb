<div class="container post-body">
  <div class="row text-center">
    <div class="text-divider">
      <h2>投稿一覧</h2>
    </div>
    <% if current_user && current_user.post.blank? %>
      <div class="mt-4">
        <%= link_to '投稿する', new_post_path, class: 'btn blue-btn text-white px-4 py-3' %>
      </div>
    <% end %>
    <% if @posts.present? %>
      <div class="card new-posts">
        <h3 class="new-posts-title d-inline">新着の投稿</h3>
        <div class="row">
          <%= render @new_posts %>
        </div>
      </div>
      <hr>
      <div class="my-3">
        <%= form_tag posts_path, method: 'get', id: 'sort-form' do %>
          <div class="mb-3 text-end">
            <label class="" for="sort">並べ替え：</label>
            <%= select_tag :sort,
                           options_for_select([['新着順', 'new'], ['古い順', 'old'], ['人気順', 'like'], ['ランダム', 'random']], params[:sort]),
                           class: 'sort-label' %>
          </div>
        <% end %>
      </div>
      <%= render @posts %>
    <% else %>
      <p class="my-5">投稿はありません。</p>
    <% end %>
  </div>
  <hr>
  <div class="my-5">
    <%= paginate @posts %>
  </div>
</div>


<script>
    document.getElementById('sort-form').addEventListener('change', function () {
        this.submit();
    });
</script>