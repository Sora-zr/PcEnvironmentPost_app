<div class="container post-body">
  <div class="card text-white border-white">
    <div class="card-header bg-dark text-center d-flex">
      <%= image_tag @post.user.avatar, class: 'rounded-circle', size: 45 %>
      <h4 style="margin: auto 20px;"><%= @post.user.name %></h4>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="swiper">
        <div class="swiper-wrapper">
          <% @post.images.each do |image| %>
            <div class="swiper-slide">
              <%= image_tag image, class: 'card-img post-image' %>
            </div>
          <% end %>
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>

  <hr class="my-5">

  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <div class="mb-4">
          <div class="card bg-dark border-white text-white">
            <div class="card-body">
              <h4 class="card-title text-center">説明</h4>
              <hr>
              <div class="card-text">
                <%= simple_format @post.description %>
              </div>
              <hr>
              <p class="text-end" style="margin: 0;">投稿作成日：　<%= @post.created_at.strftime("%Y年 %m月 %d日") %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="mb-5">
          <div class="card bg-dark border-white text-white mb-4">
            <div class="row mt-3">
              <% if current_user.own?(@post) %>
                <%= render 'shared/crud_menu', post: @post %>
              <% else %>
                <%= render 'shared/like_bookmark_menu', post: @post %>
              <% end %>
            </div>
            <hr>
            <div class="card-body">
              <!-- コメント一覧 -->
              <%= render 'comments/comments', { comments: @comments } %>
              <hr>

              <!-- コメントフォーム -->
              <%= render 'comments/form', { post: @post, comment: @comment } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
