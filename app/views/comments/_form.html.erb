<%= form_with model: comment, url: post_comments_path(post, comment), class: 'text-center m-3', local: false do |f| %>
  <div class="form-group">
    <%= f.text_area :content,
                    class: 'form-control mb-3',
                    id: 'js_new_comment_textarea',
                    placeholder: Comment.human_attribute_name(:content),
                    rows: 2 %>
  </div>
  <%= f.submit 'コメントする', class: 'btn btn-outline-primary' %>
<% end %>