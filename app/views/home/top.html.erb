<div class='top-wrapper'>
  <div class='top-inner-text'>
    <h1>Home Page</h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">説明</th>
          <th scope="col">投稿者</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% @desk_posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, desk_post_path(post) %></td>
            <td><%= post.description %></td>
            <td><%= post.user.user_name %></td>
            <td>
              <% if current_user.own?(post) %>
                <%= link_to '編集', edit_desk_post_path(post), class: 'btn btn-success' %>
                <%= link_to '削除', desk_post_path(post), class: 'btn btn-danger', data: { turbo_method: :delete } %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container mt-5">
